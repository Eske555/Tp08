<h2>Juego</h2>
<div style="color:red;">Debug: Pregunta actual Id=@ViewBag.Pregunta?.IdPregunta, Total respuestas=@(ViewBag.Respuestas != null ? ((List<Respuestas>)ViewBag.Respuestas).Count : 0)</div>
<p>Jugador: @ViewBag.Username</p>
<p>Puntaje: @ViewBag.Puntaje</p>
<p>Pregunta @ViewBag.NumPregunta: @ViewBag.Pregunta.Enunciado</p>

@if (!string.IsNullOrEmpty(ViewBag.Pregunta.Imagen))
{
    <img src="@ViewBag.Pregunta.Imagen" alt="Imagen de la pregunta" />
}

<form asp-action="VerificarRespuesta" method="post" id="formJuego">
    @foreach (var r in ViewBag.Respuestas)
    {
        <button type="submit" name="idRespuesta" value="@r.IdRespuesta">
            @r.Contenido
        </button>
    }
    <input type="hidden" name="idPregunta" value="@ViewBag.Pregunta.IdPregunta" />
</form>
<div id="resultado"></div>
